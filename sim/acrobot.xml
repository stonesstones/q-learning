<mujoco model="acrobot">
  <include file="./common/visual.xml"/>
  <include file="./common/skybox.xml"/>
  <include file="./common/materials.xml"/>

  <default>
    <joint damping=".05"/>
    <geom type="capsule" mass="1"/>
  </default>

  <option timestep="0.01" integrator="RK4">
    <flag constraint="disable" energy="enable"/>
  </option>

  <worldbody>
    <light name="light" pos="0 0 6"/>
    <geom name="floor" size="3 3 .2" type="plane" material="grid"/>
    <site name="target" type="sphere" pos="0 0 4" size="0.2" material="target" group="3"/>
    <camera name="fixed" pos="0 -6 2" zaxis="0 -1 0"/>
    <camera name="lookat" mode="targetbodycom" target="upper_arm" pos="0 -2 3"/>
    <body name="upper_arm" pos="0 0 2">
        <joint name="shoulder" type="hinge" axis="0 0 1"/>
        <geom name="upper_arm_decoration" material="decoration" type="cylinder" fromto="0 0 -.06 0 0 .06" size="0.051" mass="0"/>
        <geom name="upper_arm" fromto="0 0 0 1 0 0" size="0.05" material="self" rgba="1 1 0 0.6"/>
        <body name="lower_arm" pos="1 0 0">
            <joint name="elbow" type="hinge" axis="1 0 0"/>
            <geom name="lower_arm" fromto="0 0 0 0 0 -1" size="0.049" material="self" rgba="1 0 1 0.6"/>
            <site name="tip" pos="0 0 -1" size="0.01"/>
            <geom name="lower_arm_decoration" material="decoration" type="cylinder" fromto="-.06 0 0 .06 0 0" size="0.051" mass="0"/>
        </body>
    </body>

  </worldbody>

   <actuator>
    <motor name="shoulder" joint="shoulder" gear="2" ctrllimited="true" ctrlrange="-3 3"/>
  </actuator>
</mujoco>
